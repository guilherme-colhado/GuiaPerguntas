<%- include("partials/head.ejs") %>   
<body>
    <%- include("partials/header.ejs") %>   
    <div class="container" id="form-question">
        <div class="card">
            <div class="card-header">
                <h3>Realizar pergunta!</h3>
            </div>
            <div class="card-body">
                <form method="post" action="/salvarpergunta">
                    <label for="titulo">Titulo</label>
                    <input type="text" placeholder="Titulo" id="titulo" name="titulo" class="form-control">
                    <br/>
                    <label for="descricao">Descrição</label>
                    <textarea placeholder="Descreva sua pergunta aqui!" id="descricao" name="descricao" class="form-control"></textarea>
                    <br/>
                    <input type="submit" class="btn btn-primary" value="Perguntar">
                </form> 
            </div>
        </div>
    </div>
</body>
